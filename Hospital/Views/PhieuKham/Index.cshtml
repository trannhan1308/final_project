@model List<OA.DTO.PhieuKhams.PhieuKhamViewDTO>
    @{ 
        var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
    }
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4>Medical bill</h4>
                    <div class="page-title-right">
                        <a href="@Url.Action("New", "PhieuKham")" class="btn btn-outline-info">Add</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Doctor Name</th>
                            <th>Created date</th>
                            <th>Diagnostic</th>
                            <th>Money</th>
                            <th>Category</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Code</td>
                                    <td>@item.PatientName</td>
                                    <td>@item.DoctorName</td>
                                    <td>@item.CreatedAt.ToString("dd.MM.yyyy")</td>
                                    <td>@item.TrieuChung </td>
                                    <td>@String.Format(info, "{0:c0}", item.Price)</td>
                                    <td>@string.Format("{0}", item.NgayTaiKham.HasValue ? "Appointment card" : "Diagnostic")</td>
                                    <td>
                                        <a href="@Url.Action("PhieuHen","PhieuKham", new { patientId = item.PatientId })" role="button" class="px-2 btn btn-outline-secondary" data-toggle="tooltip" data-placement="bottom" title="Appointment card">
                                            Appointment card
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>