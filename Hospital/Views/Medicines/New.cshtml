@model OA.DTO.Medicines.MedicinesDTO
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4>Medicines management</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item">Medicines management</li>
                            <li class="breadcrumb-item">Medicines management</li>
                            <li class="breadcrumb-item active">Add</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("New", "Medicines", FormMethod.Post, new { @id = "form-new", @class = "form-horizontal needs-validation", @novalidate = "novalidate", @enctype = "multipart/form-data" }))
                {
                    <div class="mb-3 row">
                        <label class="form-label col-md-2 col-form-label" for="name">Name <sup class="text-danger">*</sup></label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @id = "name", placeholder = "Name", @required = "" })
                            @Html.ValidationMessageFor(m => m.Name, "Required.", new { @class = "invalid-feedback" })
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label class="form-label col-md-2 col-form-label" for="ngaynhap">Date Added <sup class="text-danger">*</sup></label>
                        <div class="col-md-10 " id="datepicker2">
                            @Html.TextBoxFor(m => m.NgayNhap, new { @class = "form-control", @id = "ngaynhap", placeholder = "Date Added", @required = "", data_date_format = "dd-MM-yyyy", data_date_container = "#datepicker2", data_provide = "datepicker", data_date_autoclose = "true" })
                            @Html.ValidationMessageFor(m => m.NgayNhap, "Required.", new { @class = "invalid-feedback" })
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label class="form-label col-md-2 col-form-label" for="gianhap">Price Added <sup class="text-danger">*</sup></label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.GiaNhap, new { @class = "form-control", @type = "number", @id = "gianhap", placeholder = "Price Added", @required = "" })
                            @Html.ValidationMessageFor(m => m.GiaNhap, "Required.", new { @class = "invalid-feedback" })
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label class="form-label col-md-2 col-form-label" for="giaban">Price sale <sup class="text-danger">*</sup></label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.GiaBan, new { @class = "form-control", @type="number",  @id = "giaban", placeholder = "Price sale", @required = "" })
                            @Html.ValidationMessageFor(m => m.GiaBan, "Required.", new { @class = "invalid-feedback" })
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label class="form-label col-md-2 col-form-label" for="quantity">Quantity <sup class="text-danger">*</sup></label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control", @id = "quantity", @type = "number", placeholder = "Quantity", @required = "" })
                            @Html.ValidationMessageFor(m => m.Quantity, "Required.", new { @class = "invalid-feedback" })
                        </div>
                    </div>

                    <div class="mt-3 text-end">
                        <button class="btn btn-primary w-sm waves-effect waves-light" type="submit">Save</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>