@{
    Layout = null;
}
@model OA.DTO.Auths.LoginModels
<!doctype html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <title>Login | Clinic System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Clinic" name="description" />
    <meta content="Clinic" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="@Url.Content("~/Contents/assets/images/favicon.ico")">
    <script src="@Url.Content("~/Contents/assets/libs/jquery/jquery.min.js")"></script>
    <!-- Bootstrap Css -->
    <link href="@Url.Content("~/Contents/assets/css/bootstrap.min.css")" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="@Url.Content("~/Contents/assets/css/icons.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Contents/assets/libs/toastr/build/toastr.min.css")" rel="stylesheet" />
    <!-- App Css-->
    <link href="@Url.Content("~/Contents/assets/css/app.min.css")" id="app-style" rel="stylesheet" type="text/css" />
</head>

<body class="authentication-bg">
    <div class="account-pages my-5 pt-sm-5">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card">
                        <div class="card-body p-4">
                            <div class="text-center mt-2">
                                <h5 class="text-primary">Welcome Back !</h5>
                                <p class="text-muted">Login to Clinic.</p>
                            </div>
                            <div class="p-2 mt-4">
                                @using (Html.BeginForm("Index", "Auths", FormMethod.Post, new { @id = "form-login", @class = "form-horizontal needs-validation", @novalidate = "novalidate", @enctype = "multipart/form-data" }))
                                {
                                    <div class="mb-3">
                                        <label class="form-label" for="username">User name <sup class="text-danger">*</sup></label>
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "username", placeholder = "Enter username", @required = "" })
                                        @Html.ValidationMessageFor(m => m.Email, "Required.", new { @class = "invalid-feedback" })
                                    </div>

                                    <div class="mb-3">
                                        @*<div class="float-end">
                                            <a href="#" class="text-muted">Quên mật khẩu ?</a>
                                        </div>*@
                                        <label class="form-label" for="userpassword">Password <sub class="text-danger">*</sub></label>
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter password", @required = "" })
                                        @Html.ValidationMessageFor(m => m.Password, "Required.", new { @class = "invalid-feedback" })
                                    </div>

                                    <div class="mt-3 text-end">
                                        <button class="btn btn-primary w-sm waves-effect waves-light" type="submit">Log In</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="mt-5 text-center">
                        <p>
                            ©
                            <script>document.write(new Date().getFullYear())</script> Clinic system <i class="mdi mdi-heart text-danger"></i> by Thien Nhan
                        </p>
                    </div>
                </div>
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>

    <!-- JAVASCRIPT -->
    <script src="@Url.Content("~/Contents/assets/libs/metismenu/metisMenu.min.js")"></script>
    <script src="@Url.Content("~/Contents/assets/libs/simplebar/simplebar.min.js")"></script>
    <script src="@Url.Content("~/Contents/assets/libs/node-waves/waves.min.js")"></script>
    <script src="@Url.Content("~/Contents/assets/libs/waypoints/lib/jquery.waypoints.min.js")"></script>
    <script src="@Url.Content("~/Contents/assets/libs/jquery.counterup/jquery.counterup.min.js")"></script>
    <!-- App js -->
    <script src="@Url.Content("~/Contents/assets/js/app.js")"></script>
    <script src="@Url.Content("~/Contents/assets/libs/toastr/build/toastr.min.js")"></script>
    <script src="@Url.Content("~/Contents/assets/BaseCommons.js")"></script>
</body>
</html>
@if (TempData["MessagesSuccessful"] != null)
{
    <script type="text/javascript">
         toastr["success"]('@TempData["MessagesSuccessful"].ToString()')
    </script>
}

@if (TempData["MessagesError"] != null)
{
    <script type="text/javascript">
         toastr["error"]('@TempData["MessagesError"].ToString()')
    </script>
}

@if (TempData["MessagesWarning"] != null)
{
    <script type="text/javascript">
        toastr["warning"]('@TempData["MessagesWarning"].ToString()')
    </script>
}